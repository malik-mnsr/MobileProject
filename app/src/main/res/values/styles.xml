<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DoctorStatusText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/status_text_size</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/action_button_corner_radius</item>
        <item name="android:elevation">2dp</item>
        <item name="android:minHeight">72dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/LapisLazuli</item>
        <item name="strokeColor">@color/LapisLazuli</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/LapisLazuli</item>
        <item name="hintTextColor">@color/LapisLazuli</item>
        <item name="android:textColorHint">@color/LapisLazuli</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

</resources>
