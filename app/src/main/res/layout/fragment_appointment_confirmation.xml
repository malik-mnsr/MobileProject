<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Doctor Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_doctor_name_confirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dr. John Doe"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:id="@+id/tv_doctor_specialty_confirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cardiologist"
                    android:textSize="14sp"
                    android:textColor="@color/Teal"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Patient Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient Information"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_patient_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_patient_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age: 35"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Appointment Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointment Details"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_appointment_slot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="May 16, 2023 02:00 PM - 02:30 PM"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointment Type"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rg_motif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_consultation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consultation"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginBottom="8dp"/>

                    <RadioButton
                        android:id="@+id/rb_home_visit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home Visit"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginBottom="8dp"/>

                    <RadioButton
                        android:id="@+id/rb_emergency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emergency"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginBottom="8dp"/>

                    <RadioButton
                        android:id="@+id/rb_teleconsultation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teleconsultation"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>
                </RadioGroup>

                <Button
                    android:id="@+id/btn_confirm_appointment"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Confirm Appointment"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/LapisLazuli"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>