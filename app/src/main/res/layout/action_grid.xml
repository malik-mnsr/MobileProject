<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    app:cardCornerRadius="150dp"
    app:cardElevation="4dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2">

        <!-- Consultation -->
        <LinearLayout
            android:id="@+id/consultationButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_consultation">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultation"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Home Visit -->
        <LinearLayout
            android:id="@+id/homeVisitButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_home_visit">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Visit"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Emergency -->
        <LinearLayout
            android:id="@+id/emergencyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_emergency">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Do Not Disturb -->
        <LinearLayout
            android:id="@+id/dndButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_dnd">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
               />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do Not Disturb"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

    </GridLayout>

</androidx.cardview.widget.CardView>
