<!-- fragment_dnd.xml -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- DND Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do Not Disturb Mode"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="16dp"/>

        <!-- DND Toggle -->
        <Switch
            android:id="@+id/dnd_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Do Not Disturb"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="24dp"/>

        <!-- Minigame Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tic-Tac-Toe Minigame"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="16dp"/>

        <!-- Game Status -->
        <TextView
            android:id="@+id/game_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player X's turn"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <!-- Tic-Tac-Toe Board -->
        <GridLayout
            android:id="@+id/tic_tac_toe_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_marginBottom="24dp">

            <!-- Rows will be added programmatically -->
        </GridLayout>

        <!-- Reset Button -->
        <Button
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Reset Game"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/LapisLazuli"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"/>
    </LinearLayout>
</ScrollView>